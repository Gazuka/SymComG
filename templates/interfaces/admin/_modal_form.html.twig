{#
    require form  
    require nomModal
    require titreModal
    require twigForm
    require couleur
    require taille
    option icone
#}

<div class="{{ taille }}">
    <!-- Button trigger modal -->
    <button type="button" class="col-12 {{ 'btn btn-' ~ couleur }}" data-toggle="modal" data-target="#formModal">
        {% if icone is defined %}
            <i class="fas {{ icone }}"></i>
        {% endif %}
        {{ titreBouton }}
    </button>

    <!-- Modal -->
    <div class="modal fade" id="formModal" tabindex="-1" role="dialog" aria-labelledby="formModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="formModalLabel">{{ titreModal }}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {% include twigForm with {'form': form} only %}
                </div>
            </div>
        </div>
    </div>
</div>