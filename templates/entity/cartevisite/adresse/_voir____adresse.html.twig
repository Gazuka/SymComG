{#
    require adresse
    DEBUG : afficher le priv√© si autorisation uniquement
#}
<span>
    {% if adresse.prive == false %}
        {{ adresse.numero }}
        {{ adresse.rue1 }}
        {{ adresse.rue2 }}
        <br/>
        {{ adresse.codePostal }}
        {{ adresse.ville }}
    {% else %}
        {% if is_granted("ROLE_ADMIN") %}
            <span class='bg-danger'> 
                {{ adresse.numero }} 
                {{ adresse.rue1 }} 
                {{ adresse.rue2 }} 
                {{ adresse.codePostal }} 
                {{ adresse.ville }} 
            </span>
        {% endif %}
    {% endif %}
</span>