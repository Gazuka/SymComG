{#
    require annonces
#}
{% for annonce in annonces %}
    <tr>
        <td>
            {{ annonce.id }}
        </td>
        <td>
            {% if annonce.invisible == true %}
                <i class="fas fa-eye-slash"></i>
            {% else %}
                <i class="fas fa-eye"></i>
            {% endif %}
        </td>
        <td>
            <a href='{{ path('admin_annonce_editer', {'idannonce': annonce.id}) }}'>{{ annonce.titre }}</a>
        </td>
        <td>
            {{ annonce.texte }}
        </td>
        <td>
            {{ annonce.debut | date('d/m/y H:i') }}
        </td>
        <td>
            {{ annonce.fin | date('d/m/y H:i') }}
        </td>
        <td>
            {{ annonce.couleur }}
        </td>
    </tr>
{% endfor %}