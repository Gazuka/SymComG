{% extends 'interfaces/public/_part____base_public.html.twig' %}
{% set titre = 'Marchés publics' %}
{#
    require classeur
#}

{% block title %}
    {{ parent() }} - {{ titre }}
{% endblock %}

{% block content %}

    {# ---- Titre de la page --- #}
        {% include 'interfaces/public/_part____titre_page.html.twig' with {'titre': titre} only %}    

    {# --- Affichage des marchés publics --- #}
    {% for document in classeur.filtreParSupport('pdf', 'marchepublic') %}
        {% if loop.first == false %}
            <hr/>
        {% endif %}
        {% include 'entity/classeur/pdf/' ~ document.media.support.FormatName ~ '/_apercu____document____marche_public.html.twig' with {'document': document} only %}    
    {% endfor %}

{% endblock %}