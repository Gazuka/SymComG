{% extends 'interfaces/public/_part____base_public.html.twig' %}
{% set titre = 'Bulletins municipaux' %}
{#
    require bulletins
#}

{% block title %}
    {{ parent() }} - {{ titre }}
{% endblock %}

{% block content %}
    
    {# ---- Titre de la page --- #}
    {% include 'interfaces/public/_part____titre_page.html.twig' with {'titre': titre} only %}

    {# --- Affichage des bulletins municipaux --- #}
    {% for bulletin in bulletins %}
        
        <div class='col-4'>
            <div class='text-center'>
                <a href="{{ asset(bulletin.support.media.fichier.getChemin) }}" target="_blanck">
                    {{ bulletin.titre }}<br/>{{ bulletin.periode }}
                </a>
            </div>
            {% if bulletin.support.vignette != null %}
                {% if liipFiltre is not defined %}{% set liipFiltre = 'normal' %}{% endif %}
                <a href="{{ asset(bulletin.support.media.fichier.getChemin) }}" target="_blanck">
                    <img class='img-fluid' src='{{ asset(bulletin.support.vignette) | imagine_filter(liipFiltre) }}' alt='Couverture du bulletin municipal'/>                    
                </a>
            {% else %}
            <object type="application/pdf" class='col-12' height='480vh'>
                <param name="src" value="{{ asset(bulletin.support.media.fichier.getChemin) }}" /> 
                <strong>TRAD : Le plugin pdf est absent de votre navigateur ce qui vous empêche d'avoir un aperçu du fichier.</strong>
            </object>
            {% endif %}
        </div>

    {% endfor %}
    
{% endblock %}