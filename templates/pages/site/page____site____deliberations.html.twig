{% extends 'interfaces/public/_part____base_public.html.twig' %}
{% set titre = 'Délibérations du Conseil Municipal' %}
{% if groupe == 'ccas' %}
    {% set titre = 'Délibérations du CCAS' %}
{% endif %}
{#
    require classeur
#}

{% block title %}
    {{ parent() }} - {{ titre }}
{% endblock %}

{% block content %}

    {# ---- Titre de la page --- #}
        {% include 'interfaces/public/_part____titre_page.html.twig' with {'titre': titre} only %}    

    {# --- Affichage des délibérations --- #}
    {% for document in classeur.filtreParSupport('pdf', 'deliberation') %}
        {% if loop.first == false %}
            <hr/>
        {% endif %}
        {% include 'entity/classeur/pdf/' ~ document.media.support.FormatName ~ '/_apercu____document____deliberation.html.twig' with {'document': document, 'groupe': groupe} only %}    
    {% endfor %}

{% endblock %}