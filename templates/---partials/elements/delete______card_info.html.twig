{#
    require taille
    require couleur
    require titre
    require icone
    block valeur
#}

<div class="{{taille}} mb-4">
    <div class="card border-left-{{couleur}} shadow h-100 py-2">
        <div class="card-body">
            <div class="row no-gutters align-items-center">
            <div class="col mr-2">
                <div class="text-xs font-weight-bold text-{{couleur}} text-uppercase mb-1">{{titre}}</div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">
                    {% block valeur %}             
                    {% endblock %}           
                </div>
            </div>
            <div class="col-auto">
                <i class="fas {{icone}} fa-2x text-gray-300"></i>
            </div>
            </div>
        </div>
    </div>
</div>